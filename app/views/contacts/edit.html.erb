<h1>Edit Contact</h1>
<%= form_tag "/contacts/#{@contact.id}" , method: :patch do %>
  <div class="form-group">
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name, @contact.first_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name, @contact.last_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, @contact.email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :phone_number %>
    <%= text_field_tag :phone_number, @contact.phone_number, class: "form-control" %>
  </div>
  <div>
    <%= button_tag 'Submit', class: "btn btn_default" %>
  </div>
<% end %>